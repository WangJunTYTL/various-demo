import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import HelloServer
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  string helloString(string msg)'
  print '  i32 helloInt(i32 num)'
  print '  bool helloBoolean(bool flag)'
  print '  void helloVoid()'
  print '  string helloNull()'
  print '  FirstResponse request(FirstRequest request)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = HelloServer.Client(protocol)
transport.open()

if cmd == 'helloString':
  if len(args) != 1:
    print 'helloString requires 1 args'
    sys.exit(1)
  pp.pprint(client.helloString(args[0],))

elif cmd == 'helloInt':
  if len(args) != 1:
    print 'helloInt requires 1 args'
    sys.exit(1)
  pp.pprint(client.helloInt(eval(args[0]),))

elif cmd == 'helloBoolean':
  if len(args) != 1:
    print 'helloBoolean requires 1 args'
    sys.exit(1)
  pp.pprint(client.helloBoolean(eval(args[0]),))

elif cmd == 'helloVoid':
  if len(args) != 0:
    print 'helloVoid requires 0 args'
    sys.exit(1)
  pp.pprint(client.helloVoid())

elif cmd == 'helloNull':
  if len(args) != 0:
    print 'helloNull requires 0 args'
    sys.exit(1)
  pp.pprint(client.helloNull())

elif cmd == 'request':
  if len(args) != 1:
    print 'request requires 1 args'
    sys.exit(1)
  pp.pprint(client.request(eval(args[0]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
